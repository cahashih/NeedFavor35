@model Hakaton.Models.ChangeProfileInfo

@{
    ViewBag.Title = "Изменение данных профиля";
}




@using (Html.BeginForm("ChangeProfileInfo", "Manage", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    
<div class="grid">
    <div class="registration-container">
        <h1 class="registration-text">Изменение данных профиля</h1>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form__field">
        <h1>Фамилия</h1>
        <div class="col-md-10">
            
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form__input" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form__field">
        <h1>Имя</h1>
        <div class="col-md-10">
            
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form__input" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form__field">
        <h1>Отчество</h1>
        <div class="col-md-10">
            
            @Html.EditorFor(model => model.Patronomyc, new { htmlAttributes = new { @class = "form__input" } })
            @Html.ValidationMessageFor(model => model.Patronomyc, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form__field">
        <h1>Краткая информация</h1>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ShortInfo, new { htmlAttributes = new { @class = "form__input" } })
            @Html.ValidationMessageFor(model => model.ShortInfo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
    
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
